<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/textViewProductType"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:maxLines="3"
            android:orientation="vertical"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="5dp" />

        <!-- <TextView xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/textViewProductQuantity"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="match_parent"
             android:background="@drawable/cell_shape"
             android:gravity="center"
             android:maxLines="2"
             android:maxWidth="150px"
             android:orientation="vertical"
             android:paddingLeft="2dp"
             android:paddingRight="2dp"
             android:paddingTop="5dp" />-->

        <RelativeLayout
            android:id="@+id/relativeLayoutSpinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cell_shape">

            <Spinner
                android:id="@+id/spinnerProductQty"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left"
                android:prompt="@string/select_quantity"
                android:spinnerMode="dialog" />
        </RelativeLayout>


        <Button
            android:id="@+id/buttonRemoveProduct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Remove" />
    </LinearLayout>

