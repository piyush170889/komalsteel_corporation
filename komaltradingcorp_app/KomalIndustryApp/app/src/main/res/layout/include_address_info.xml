        <TextView
            android:id="@+id/textView_mark_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView_contact_no"
            android:text="Mark : "
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/primary_dark" />


        <TextView
            android:id="@+id/textView_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_contact_no"
            android:layout_toEndOf="@+id/textView_mark_title"
            android:layout_toRightOf="@+id/textView_mark_title"
            android:textAppearance="?android:attr/textAppearanceSmall" />


        <TextView
            android:id="@+id/textView_destination_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView_mark"
            android:text="Destination : "
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/primary_dark" />


        <TextView
            android:id="@+id/textView_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_mark"
            android:layout_toEndOf="@+id/textView_destination_title"
            android:layout_toRightOf="@+id/textView_destination_title"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView_transporter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView_destination"
            android:text="Transporter Name : "
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/primary_dark" />


        <TextView
            android:id="@+id/textView_transporter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_destination"
            android:layout_toEndOf="@+id/textView_transporter_title"
            android:layout_toRightOf="@+id/textView_transporter_title"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall" />


        <TextView
            android:id="@+id/textView_vat_tin_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView_transporter_name"
            android:text="Vat Tin No: "
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/primary_dark" />


        <TextView
            android:id="@+id/textView_vat_tin_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_transporter_name"
            android:layout_toEndOf="@+id/textView_vat_tin_title"
            android:layout_toRightOf="@+id/textView_vat_tin_title"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall" />


        <ImageView
            android:id="@+id/imageView_edit_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView_address"
            android:src="@drawable/ic_edit_address"
            android:tint="@color/primary" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutForNotShippingAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayoutForShippingAddress"
        android:visibility="gone">
