              android:textColorHint="@color/aluminum">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Enter shipping address info to place order Otherwise update from profile"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/input_pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayoutSpinnerCity"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:hint="@string/hint_pincode"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="6"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <!--</android.support.design.widget.TextInputLayout>-->

            <!--   <android.support.design.widget.TextInputLayout
                   android:id="@+id/input_layout_address"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/input_layout_pincode"
                   android:textColorHint="@color/aluminum">-->


            <EditText
                android:id="@+id/input_address"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/textMsg"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/whole_border"
                android:ems="10"
                android:hint="@string/hint_address"
                android:inputType="textMultiLine|textCapWords"
                android:maxHeight="100dp"
                android:maxLength="100"
                android:padding="5dp"

                android:textColor="@color/black"
                android:textSize="14sp" />
            <!--</android.support.design.widget.TextInputLayout>-->

            <!--  <android.support.design.widget.TextInputLayout
                  android:id="@+id/input_layout_city"
                  android:layout_width="match_parent"
