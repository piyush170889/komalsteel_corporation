<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cell_shape">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/imageViewRemoveProduct"
        android:divider="@drawable/vertical_divider"
        android:dividerPadding="3dp"
        android:orientation="horizontal"
        android:showDividers="middle|end"
        android:weightSum="2">


        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/textViewProductType"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:gravity="center"
            android:maxLines="3"
            android:orientation="vertical"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="5dp"
            android:text="hfhfdgfdg" />


        <LinearLayout
            android:id="@+id/relativeLayoutSpinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6">

            <Spinner
                android:id="@+id/spinnerProductQty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:gravity="center"
                android:spinnerMode="dialog" />
        </LinearLayout>


    </LinearLayout>


    <ImageView
        android:id="@+id/imageViewRemoveProduct"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:src="@drawable/ic_remove_item" />
</RelativeLayout>