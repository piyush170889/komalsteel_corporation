<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item> 
        <item name="colorPrimaryDark">@color/primary_dark</item> 
        <item name="colorControlHighlight">@color/primary</item> 
        <item name="android:typeface">monospace</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorFocusedHighlight">@color/primary</item>
        <item name="android:colorBackgroundFloating">@color/black</item>
        <item name="selectableItemBackground">@drawable/selectable_item_background</item>
        <item name="android:selectableItemBackground">@drawable/selectable_item_background
        </item>
        <item name="android:colorControlActivated">@color/primary</item>
        <item name="android:dialogTheme">@style/dialogTheme</item>
        <item name="android:textColorHint">@color/aluminum</item>
